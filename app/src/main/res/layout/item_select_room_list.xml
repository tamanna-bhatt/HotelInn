<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <com.makeramen.roundedimageview.RoundedImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/imageView1"
                    android:src="@drawable/a"
                    android:layout_width="85.3dp"
                    android:layout_height="85.3dp"
                    android:scaleType="centerCrop"
                    app:riv_corner_radius="5dip"
                    android:layout_marginRight="6.4dp"
                    app:riv_oval="false" />


                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_marginLeft="8dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <customfonts.MyTextView_Roboto_Regular
                        android:id="@+id/title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Classic Room"
                        android:textColor="@color/black"
                        android:textSize="15sp"/>

                    <customfonts.MyTextView_Roboto_Regular
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="11.7sp"
                        android:textColor="#8f948d"
                        android:text="@string/child"/>

                    <customfonts.MyTextView_Roboto_Regular
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="11.7sp"
                        android:textColor="#8f948d"

                        android:text="Free Break Fast, Wifi, pool"/>

                    <customfonts.MyTextView_Roboto_Regular
                        android:id="@+id/refund"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:textColor="#f32e2e"
                        android:layout_marginTop="6.5dp"
                        android:text="Cancellation is Refundable"/>
                </LinearLayout>

                <customfonts.MyTextView_Roboto_Regular
                    android:id="@+id/recommand"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Recommended"
                    android:textSize="10sp"
                    android:textColor="#3492ff"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="vertical">



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                <customfonts.MyTextView_Roboto_Medium
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="18.3sp"
                    android:text="$149"/>



                        <customfonts.MyTextView_Roboto_Regular
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/strike_line"
                            android:textSize="11.7sp"
                            android:textColor="#8f948d"
                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"/>

                        <customfonts.MyTextView_Roboto_Regular
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="25% Off"
                            android:textSize="11.7sp"
                            android:textColor="#fc5732"
                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"/>


                </LinearLayout>



                    <customfonts.MyTextView_Roboto_Regular
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="per night"
                        android:textSize="8.3sp"

                        android:textColor="#8f948d"/>

                </LinearLayout>

                </LinearLayout>

                <customfonts.MyTextView_Roboto_Medium
                    android:layout_width="wrap_content"
                    android:id="@+id/few"
                    android:visibility="gone"
                    android:layout_height="wrap_content"
                    android:textColor="#f32e2e"
                    android:text="Few Left!"
                    android:layout_marginRight="10sp"
                    android:textSize="10sp"/>

                <customfonts.MyTextView_Roboto_Regular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11.7sp"
                    android:text="Book"
                    android:textColor="@color/white"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:background="@drawable/blue_rect"/>

            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>