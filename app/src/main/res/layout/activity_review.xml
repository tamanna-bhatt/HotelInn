<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="ws.wolfsoft.hotelinn.ReviewActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/toolbar_guest_rooms"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/view_line"/>


    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusableInTouchMode="true"
        android:background="#f6f6f6"
        android:orientation="vertical">





        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="11dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:layout_gravity="center"
                    android:background="@drawable/green_rect">

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_star"/>

                    <customfonts.MyTextView_Roboto_Regular
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13.3sp"
                        android:text="4.5"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/white"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:orientation="vertical">

                    <customfonts.MyTextView_Roboto_Regular
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="13.3sp"
                        android:textAllCaps="true"
                        android:text="Very Good"/>

                    <customfonts.MyTextView_Roboto_Regular
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="11.7sp"
                        android:text="Based on 125 Reviews"
                        android:textColor="#585d57"/>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:weightSum="5"

            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:gravity="center"
                android:orientation="vertical">


                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal">


                        <customfonts.MyTextView_Roboto_Medium
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:letterSpacing="0.01"
                            android:lineSpacingExtra="-5.3sp"
                            android:text="3.5"
                            android:textColor="@color/black"
                            android:textSize="15.3sp" />



                    </LinearLayout>

                    <!--circularprogressbar library can be used-->

                    <com.mikhaellopez.circularprogressbar.CircularProgressBar
                        android:id="@+id/circle_progress"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        app:cpb_background_progressbar_color="#FFCDD2"
                        app:cpb_background_progressbar_width="5dp"
                        app:cpb_progressbar_color="#F44336"
                        app:cpb_progressbar_width="5dp" />


                </FrameLayout>

                <customfonts.MyTextView_Roboto_Regular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Value for Money"
                    android:textColor="#585d57"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="11.7sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:gravity="center"
                android:orientation="vertical">


                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal">


                        <customfonts.MyTextView_Roboto_Medium
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:letterSpacing="0.01"
                            android:lineSpacingExtra="-5.3sp"
                            android:text="3.5"
                            android:textColor="@color/black"
                            android:textSize="15.3sp" />



                    </LinearLayout>

                    <!--circularprogressbar library can be used-->


                    <com.mikhaellopez.circularprogressbar.CircularProgressBar
                        android:id="@+id/circle_progress1"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        app:cpb_background_progressbar_color="#FFCDD2"
                        app:cpb_background_progressbar_width="5dp"
                        app:cpb_progressbar_color="#F44336"
                        app:cpb_progressbar_width="5dp" />

                </FrameLayout>

                <customfonts.MyTextView_Roboto_Regular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Location"
                    android:textColor="#585d57"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="11.7sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:gravity="center"
                android:orientation="vertical">


                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal">


                        <customfonts.MyTextView_Roboto_Medium
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:letterSpacing="0.01"
                            android:lineSpacingExtra="-5.3sp"
                            android:text="3.5"
                            android:textColor="#444445"
                            android:textSize="15.3sp" />


                    </LinearLayout>

                    <!--circularprogressbar library can be used-->

                    <com.mikhaellopez.circularprogressbar.CircularProgressBar
                        android:id="@+id/circle_progress2"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        app:cpb_background_progressbar_color="#FFCDD2"
                        app:cpb_background_progressbar_width="5dp"
                        app:cpb_progressbar_color="@color/black"
                        app:cpb_progressbar_width="5dp" />


                </FrameLayout>

                <customfonts.MyTextView_Roboto_Regular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Cleanliness"
                    android:textColor="#585d57"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="11.7sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:gravity="center"
                android:orientation="vertical">


                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal">


                        <customfonts.MyTextView_Roboto_Medium
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:letterSpacing="0.01"
                            android:lineSpacingExtra="-5.3sp"
                            android:text="3.5"
                            android:textColor="#444445"
                            android:textSize="15.3sp" />


                    </LinearLayout>

                    <!--circularprogressbar library can be used-->

                    <com.mikhaellopez.circularprogressbar.CircularProgressBar
                        android:id="@+id/circle_progress3"
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        app:cpb_background_progressbar_color="#FFCDD2"
                        app:cpb_background_progressbar_width="5dp"
                        app:cpb_progressbar_color="@color/black"
                        app:cpb_progressbar_width="5dp" />


                </FrameLayout>

                <customfonts.MyTextView_Roboto_Regular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Amenities"
                    android:textColor="#585d57"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="11.7sp" />

            </LinearLayout>


        </LinearLayout>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
          >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="11dp">

                <customfonts.MyTextView_Roboto_Regular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_marginTop="14dp"
                    android:layout_marginLeft="12dp"
                    android:textAllCaps="true"
                    android:text="Verified Photos by Users"
                    android:textSize="11.7sp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="13dp"
                    android:orientation="horizontal">


                    <!--RoundedImageView Library Can be Used-->

                <com.makeramen.roundedimageview.RoundedImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/imageView1"
                    android:src="@drawable/a"
                    android:layout_width="74.7dp"
                    android:layout_height="74.7dp"
                    android:scaleType="centerCrop"
                    app:riv_corner_radius="5dip"
                    android:layout_marginRight="6.4dp"
                    app:riv_oval="false" />

                    <!--RoundedImageView Library Can be Used-->

                    <com.makeramen.roundedimageview.RoundedImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:src="@drawable/a"
                        android:layout_width="74.7dp"
                        android:layout_height="74.7dp"
                        android:scaleType="centerCrop"
                        app:riv_corner_radius="5dip"
                        android:layout_marginLeft="6.4dp"
                        android:layout_marginRight="6.4dp"
                        app:riv_oval="false" />



                    <!--RoundedImageView Library Can be Used-->



                    <com.makeramen.roundedimageview.RoundedImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:src="@drawable/a"
                        android:layout_width="74.7dp"
                        android:layout_height="74.7dp"
                        android:scaleType="centerCrop"
                        app:riv_corner_radius="5dip"
                        android:layout_marginLeft="6.4dp"
                        android:layout_marginRight="6.4dp"
                        app:riv_oval="false" />

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">



                    <com.makeramen.roundedimageview.RoundedImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:src="@drawable/a"
                        android:layout_width="74.7dp"
                        android:layout_height="74.7dp"
                        android:scaleType="centerCrop"
                        app:riv_corner_radius="5dip"
                        android:layout_marginLeft="6.4dp"
                        android:layout_marginRight="6.4dp"
                        app:riv_oval="false" />
                        <ImageView
                            android:layout_width="74.7dp"
                            android:layout_height="74.7dp"
                            android:layout_marginLeft="6.4dp"
                            android:layout_marginRight="6.4dp"
                            android:src="@drawable/transperent_rect"/>

                        <customfonts.MyTextView_Roboto_Regular
                            android:layout_width="50dp"
                            android:layout_height="wrap_content"
                            android:text="+45 Photos"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textSize="15sp"
                            android:textColor="@color/white"/>




                    </FrameLayout>

                </LinearLayout>
            </LinearLayout>

        </android.support.v7.widget.CardView>


        <!--Review Recyclerview-->

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:nestedScrollingEnabled="false"
            android:clipToPadding="false"/>

    </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    </LinearLayout>



    <LinearLayout
        android:layout_above="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@drawable/shadow"/>

    <LinearLayout
        android:layout_above="@+id/linear"
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="22dp"

        android:orientation="vertical">

        <customfonts.MyTextView_Roboto_Regular
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:layout_marginLeft="18dp"
            android:textColor="@color/blue"
            android:gravity="center"
            android:layout_marginTop="3dp"
            android:text="Get Flat 15% off on booking before tonight."/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:orientation="horizontal"
            android:background="#43494d">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="19dp"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

            <customfonts.MyTextView_Roboto_Medium
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$149"
                android:textSize="16.7sp"
                android:textColor="@color/white"/>

                <customfonts.MyTextView_Roboto_Regular
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="per night"
                    android:textColor="@color/white"
                    android:textSize="10sp"/>

            </LinearLayout>

            <customfonts.MyTextView_Roboto_Regular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/strike_line"
                android:textColor="@color/white"
                android:layout_marginLeft="5dp"

                android:layout_marginBottom="3dp"
                android:layout_gravity="center"
                android:textSize="10sp"/>

        </LinearLayout>


        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:orientation="horizontal"

            android:background="#f32e2e">

            <customfonts.MyTextView_Roboto_Regular
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="SELECT ROOM"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
