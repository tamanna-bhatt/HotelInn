<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".CouponsActivity">
    <include layout="@layout/toolbar_guest_rooms"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:paddingLeft="11.7dp"
        android:layout_marginTop="10dp">
        <customfonts.TextViewSFProDisplayMedium
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="#403f3f"
            android:text="Get 10% off* "
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="-5dp">
            <customfonts.TextViewSFProDisplayRegular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11.7sp"
                android:layout_weight="1"
                android:paddingBottom="9.8dp"
                android:textColor="#a7a7a7"
                android:text="Lorem Ipsum is simply dummy text of the printing and
typesetting industry."
                />
            <customfonts.TextViewSFProDisplayRegular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13.3sp"
                android:textColor="#4098ff"
                android:text="Apply"
                android:layout_marginRight="11.7dp"
                android:paddingTop="4.3dp"
                android:paddingBottom="4.3dp"
                android:paddingLeft="12.3dp"
                android:paddingRight="12.3dp"
                android:background="@drawable/blue_border_rect"
                />
        </LinearLayout>


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="#979797"
        android:layout_marginLeft="11.9dp"
        android:layout_marginRight="11.9dp"
        android:layout_marginTop="9.8dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:paddingLeft="11.7dp"
        android:layout_marginTop="10dp"
        >
        <customfonts.TextViewSFProDisplayMedium
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="#403f3f"
            android:text="Get 10% off* "
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="-5dp">
            <customfonts.TextViewSFProDisplayRegular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11.7sp"
                android:layout_weight="1"
                android:paddingBottom="9.8dp"
                android:textColor="#a7a7a7"
                android:text="Lorem Ipsum is simply dummy text of the printing and
typesetting industry."
                />
            <customfonts.TextViewSFProDisplayRegular
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13.3sp"
                android:textColor="#4098ff"
                android:text="Apply"
                android:layout_marginRight="11.7dp"
                android:paddingTop="4.3dp"
                android:paddingBottom="4.3dp"
                android:paddingLeft="12.3dp"
                android:paddingRight="12.3dp"
                android:background="@drawable/blue_border_rect"
                />
        </LinearLayout>


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="#979797"
        android:layout_marginLeft="11.9dp"
        android:layout_marginRight="11.9dp"
        android:layout_marginTop="9.8dp"/>

</LinearLayout>